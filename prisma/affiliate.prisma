
generator affiliateClient {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/affiliate-client"
}

datasource db {
  provider = "mysql"
  url      = env("AFFILIATE_DATABASE_URL")
}

model Product {
  id               String     @id @default(cuid())
  name             String
  brand            String?
  description      String?    @db.Text
  price            String?
  imageUrl         String?    @db.VarChar(1024)
  url              String     @db.VarChar(1024)
  rel              String?
  blogId           String?
  rationale        String?    @db.Text
  roadmapPhase     Int?
  productIntention String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  categories       Category[] @relation("ProductCategories")
  tags             Tag[]      @relation("ProductTags")
  reviews          Review[]

  relatedProducts  Product[]  @relation("ProductRelations")
  relatedTo        Product[]  @relation("ProductRelations")
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[] @relation("ProductCategories")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[] @relation("ProductTags")
}

model Review {
  id        String   @id @default(cuid())
  author    String
  rating    Int
  comment   String   @db.Text
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}
